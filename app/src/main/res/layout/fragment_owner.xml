<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">


        <TextView
            android:id="@+id/textViefgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Username"
            android:textColor="@color/Dark_blue"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ousername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shadow_button"
            android:ems="10"
            android:text="Username"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:paddingStart="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Full Name"
                android:textColor="@color/Dark_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/oname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shadow_button"
            android:ems="10"
            android:text="Name"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:paddingStart="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Email"
                android:textColor="@color/Dark_blue"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/oemail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shadow_button"
            android:ems="10"
            android:text="Email"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:paddingStart="15dp" />



        <TextView
            android:id="@+id/textVfek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Joined Date"
            android:textColor="@color/Dark_blue"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ojoineddate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shadow_button"
            android:ems="10"
            android:text="Joined Date"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/texhyVfek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Address"
            android:textColor="@color/Dark_blue"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/oaddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shadow_button"
            android:ems="10"
            android:text="Hello"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:paddingStart="15dp" />




    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:progressDrawable="@drawable/progress_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>